{%- comment -%} 渲染 banner 类型 block {%- endcomment -%}
{% assign align = text_alignment | default: 'center' %}

<section class="demo-banner demo-banner--{{ align }}">
  {% if image %}
    <div class="demo-banner__bg">
      <img src="{{ image | image_url: width: 1600 }}" alt="{{ heading | escape }}">
    </div>
  {% endif %}

  <div class="demo-banner__content">
    {% if heading %}
      <h2 class="demo-banner__heading">{{ heading }}</h2>
    {% endif %}
    {% if subheading %}
      <p class="demo-banner__subheading">{{ subheading }}</p>
    {% endif %}

    {% if button_label %}
      <a href="{{ button_link }}" class="demo-banner__button">
        {{ button_label }}
      </a>
    {% endif %}
  </div>
</section>