{% endif %}
{% if a != 'cs' and 2 >=0 %}
  <p>test != and logic</p>
{% endif %}

{% assign b = '1, 2, 3, 4, 5' | split: ',' %}

{% if b contains '1' %}
  <p>b arr contains 1</p>
{% endif %}


